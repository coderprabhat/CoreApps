@model Website.Models.Case

@{
    ViewData["Title"] = "Edit Case";
}

<h1>Edit Case</h1>

<h4>Case</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="Id" />
                <label asp-for="LegalBusinessName" class="control-label"></label>
                <input asp-for="LegalBusinessName" class="form-control" />
                <span asp-validation-for="LegalBusinessName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BusinessTaxId" class="control-label"></label>
                <input asp-for="BusinessTaxId" class="form-control" />
                <span asp-validation-for="BusinessTaxId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedPlans" class="control-label"></label>
                <select asp-for="SelectedPlans" class="form-control" asp-items="@(new MultiSelectList(ViewBag.PlansList, Model.SelectedPlans))" multiple="multiple"></select>
                <span asp-validation-for="SelectedPlans" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
