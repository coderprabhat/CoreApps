@model IEnumerable<Website.Models.Case>


@{
    ViewData["Title"] = "Cases";
}

<h2>Cases</h2>

<div id="cases-container">
    @Html.Partial("_CasesList", Model)
</div>

<div id="contacts-container">
    <!-- Contacts will be loaded here -->
</div>

<!-- Modal for creating and editing contacts -->
<div class="modal fade" id="contact-modal" tabindex="-1" role="dialog" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactModalLabel">Contact</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="contact-modal-body">
                <!-- Contact form will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Load contacts for the selected case
            $('#cases-container').on('click', '.view-contacts', function () {
                var caseId = $(this).data('case-id');
                $.ajax({
                    url: '@Url.Action("GetContacts", "Cases")',
                    data: { caseId: caseId },
                    success: function (result) {
                        $('#contacts-container').html(result);
                    }
                });
            });

            // Open the modal to create a new contact
            $('#cases-container').on('click', '.add-contact', function () {
                var caseId = $(this).data('case-id');
                $.ajax({
                    url: '@Url.Action("Create", "CaseContacts")',
                    data: { caseId: caseId },
                    success: function (result) {
                        $('#contact-modal-body').html(result);
                        $('#contact-modal').modal('show');
                    }
                });
            });

            // Open the modal to edit a contact
            $('#contacts-container').on('click', '.edit-contact', function () {
                var contactId = $(this).data('contact-id');
                $.ajax({
                    url: '@Url.Action("Edit", "CaseContacts")',
                    data: { id: contactId },
                    success: function (result) {
                        $('#contact-modal-body').html(result);
                        $('#contact-modal').modal('show');
                    }
                });
            });

            // Handle the contact form submission via AJAX
            $('#contact-modal-body').on('submit', '#contact-form', function (event) {
                event.preventDefault();
                $.ajax({
                    url: $(this).attr('action'),
                    method: $(this).attr('method'),
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#contact-modal').modal('hide');
                            var caseId = $('input[name="CaseId"]').val();
                            $.ajax({
                                url: '@Url.Action("GetContacts", "Cases")',
                                data: { caseId: caseId },
                                success: function (result) {
                                    $('#contacts-container').html(result);
                                }
                            });
                        } else {
                            $('#contact-modal-body').html(response);
                        }
                    }
                });
            });
        });
    </script>
}

