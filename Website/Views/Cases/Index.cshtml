@model IEnumerable<Website.Models.Case>

@{
    ViewData["Title"] = "Cases";
}

<h2>Cases</h2>

<p>
    <a asp-action="Create">Create New Case</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Legal Business Name</th>
            <th>Business Tax ID</th>
            <th>Plans</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LegalBusinessName</td>
                <td>@item.BusinessTaxId</td>
                <td>@item.Plans</td>
                <td>@item.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-action="Create" asp-controller="CaseContacts" asp-route-caseId="@item.Id">Add Contact</a>
                </td>
            </tr>
        }
    </tbody>
</table>
